@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Rehberler</h3>
    <a href="/Admin/Guide/AddGuide/" class="btn btn-primary">
        + Yeni Rehber Ekle
    </a>
</div>

<div class="card shadow-sm rounded-3">
    <div class="card-body">
        <table id="guidesTable" class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Fotoğraf</th>
                    <th>Ad Soyad</th>
                    <th>Açıklama</th>
                    <th>Sosyal Medya</th>
                    <th>Durum</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var count = 0;
                }
                @foreach (var item in Model)
                {
                    count++;
                    <tr data-id="@item.GuideID">
                        <td>@count</td>
                        <td>
                            <img src="@item.Image" alt="@item.Name"
                                 class="rounded-circle" width="50" height="50" />
                        </td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>
                            <a href="@item.SocialMediaA" target="_blank" class="me-2">
                                <i class="bx bxl-facebook-circle fs-4 text-primary"></i>
                            </a>
                            <a href="@item.SocialMediaB" target="_blank">
                                <i class="bx bxl-instagram fs-4 text-danger"></i>
                            </a>
                        </td>
                        <td>
                            <a href="/Admin/Guide/ChangeStatus/@item.GuideID"
                               class="badge @(item.Status ? "bg-success" : "bg-secondary") text-decoration-none">
                                @(item.Status ? "Aktif" : "Pasif")
                            </a>
                        </td>
                        <td>
                            <a href="javascript:void(0)" class="btn btn-sm btn-outline-danger btn-delete">
                                <i class="bx bx-trash"></i> Sil
                            </a>
                        </td>
                        <td>
                            <a href="/Admin/Guide/EditGuide/@item.GuideID" class="btn btn-sm btn-outline-success">
                                <i class="bx bx-edit"></i> Güncelle
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <!-- DataTables -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            var table = $('#guidesTable').DataTable({
                "language": { "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json" },
                "pageLength": 10,
                "ordering": true,
                "lengthChange": false,
                "info": false
            });

            // Silme işlemi SweetAlert ile
            $('#guidesTable').on('click', '.btn-delete', function () {
                var row = $(this).closest('tr');
                var id = row.data('id');

                Swal.fire({
                    title: 'Emin misiniz?',
                    text: "Bu rehber kalıcı olarak silinecek!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Evet, sil!',
                    cancelButtonText: 'İptal',
                    backdrop:false
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '/Admin/Guide/DeleteGuide',
                            type: 'POST',
                            data: { id: id },
                            success: function (response) {
                                if (response.success) {
                                    table.row(row).remove().draw();
                                    Swal.fire({
                                        title: 'Silindi!',
                                        text: response.message,
                                        icon: 'success',
                                        backdrop: false
                                    });
                                } else {
                                    Swal.fire({
                                        title: 'Hata!',
                                        text: response.message,
                                        icon: 'error',
                                        backdrop: false
                                    });
                                }
                            },
                            error: function () {
                                Swal.fire({
                                    title: 'Hata!',
                                    text: 'Bir hata oluştu. Lütfen tekrar deneyin.',
                                    icon: 'error',
                                    backdrop: false
                                });
                            }
                        });
                    }
                });
            });
        });
    </script>
}