@model EntityLayer.Concrete.Guide

@{
    ViewData["Title"] = "EditGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Rehber Bilgisi Güncelle</h3>
    <a href="/Admin/Guide/Index" class="btn btn-outline-secondary">
        ← Listeye Dön
    </a>
</div>

<div class="card shadow-sm rounded-3">
    <div class="card-body">
        <form asp-action="EditGuide" asp-controller="Guide" asp-area="Admin" method="post">
            <div class="row g-3">
                <input type="hidden" asp-for="GuideID" />
                <div class="col-md-6">
                    <label class="form-label">Ad Soyad</label>
                    <input class="form-control" asp-for="Name" placeholder="Örn: Ahmet Yılmaz" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Description" class="form-label">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="1" placeholder="Rehber hakkında açıklama giriniz."></textarea>
                </div>
                <div class="col-md-6">
                    <label asp-for="Image" class="form-label">Fotoğraf URL</label>
                    <input asp-for="Image" class="form-control" placeholder="https://...jpg" />
                </div>
                <div class="col-md-6">
                    <label asp-for="SocialMediaA" class="form-label">Sosyal Medya 1 (Facebook)</label>
                    <input asp-for="SocialMediaA" class="form-control" placeholder="https://facebook.com/kullanici" />
                </div>
                <div class="col-md-6">
                    <label asp-for="SocialMediaB" class="form-label">Sosyal Medya 2 (Instagram)</label>
                    <input asp-for="SocialMediaB" class="form-control" placeholder="https://instagram.com/kullanici" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Status" class="form-label d-block">Durum</label>
                    <div class="form-check form-switch">
                        <input class="form-check-input" asp-for="Status" type="checkbox" />
                        <label class="form-check-label">Aktif mi?</label>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="bx bx-save"></i> Kaydet
                </button>
                <a href="/Admin/Guide/Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>