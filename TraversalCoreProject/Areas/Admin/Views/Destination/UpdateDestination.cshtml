@model EntityLayer.Concrete.Destination
@{
    ViewData["Title"] = "UpdateDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h3 class="mb-4">✏️ Rota Güncelleme Alanı</h3>

    <form asp-action="UpdateDestination" method="post">
        @Html.HiddenFor(x => x.DestinationID)

        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Şehir</label>
                <input class="form-control" asp-for="City" placeholder="Örn: Paris" />
            </div>

            <div class="col-md-6">
                <label class="form-label">Fiyat</label>
                <input class="form-control" asp-for="Price" placeholder="Örn: 2500" />
            </div>

            <div class="col-md-6">
                <label class="form-label">Gün - Gece</label>
                <input class="form-control" asp-for="DayNight" placeholder="Örn: 5 Gün - 4 Gece" />
            </div>

            <div class="col-md-6">
                <label class="form-label">Kapasite</label>
                <input class="form-control" asp-for="Capacity" placeholder="Örn: 30" />
            </div>

            <div class="col-md-6">
                <label class="form-label">Ana Görsel</label>
                <input class="form-control" asp-for="Image" placeholder="Ana görsel URL'si" />
            </div>

            <div class="col-md-6">
                <label class="form-label">Kapak Görseli</label>
                <input class="form-control" asp-for="BlogCoverImage" placeholder="Kapak görsel URL'si" />
            </div>

            <div class="col-md-6">
                <label class="form-label">Mini Görsel</label>
                <input class="form-control" asp-for="BlogMiniImage" placeholder="Mini görsel URL'si" />
            </div>

            <div class="col-12">
                <label class="form-label">Ana Açıklama</label>
                <textarea class="form-control" asp-for="Description" rows="3" placeholder="Tur hakkında detaylı açıklama..."></textarea>
            </div>

            <div class="col-md-6">
                <label class="form-label">Mini Açıklama 1</label>
                <textarea class="form-control" asp-for="BlogDescriptionA" rows="2" placeholder="Kısa açıklama 1..."></textarea>
            </div>

            <div class="col-md-6">
                <label class="form-label">Mini Açıklama 2</label>
                <textarea class="form-control" asp-for="BlogDescriptionB" rows="2" placeholder="Kısa açıklama 2..."></textarea>
            </div>
        </div>

        <div class="mt-4">
            <button class="btn btn-primary px-4">💾 Güncelle</button>
            <a href="/Admin/Destination/Index" class="btn btn-secondary px-4">⬅️ Geri Dön</a>
        </div>
    </form>
</div>
