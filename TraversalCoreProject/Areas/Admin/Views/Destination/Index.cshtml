@model List<Destination>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Tur Rotaları</h3>
    <a href="/Admin/Destination/AddDestination/" class="btn btn-primary">
        + Yeni Tur Rotası
    </a>
</div>

<div class="card shadow-sm rounded-3">
    <div class="card-body">
        <table id="destinationsTable" class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>ŞEHİR</th>
                    <th>FİYAT</th>
                    <th>KAPASİTE</th>
                    <th>SİTEDE GÖR</th>
                    <th>SİL</th>
                    <th>GÜNCELLE</th>
                    <th>DETAYLAR</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DestinationID</td>
                        <td>@item.City</td>
                        <td>@item.Price₺</td>
                        <td>@item.Capacity</td>
                        <td><a href="/Destination/DestinationDetails/@item.Description/" class="btn btn-outline-info">Sitede Gör</a></td>
                        <td><a href="/Admin/Destination/DeleteDestination/@item.DestinationID" class="btn btn-outline-danger">Sil</a></td>
                        <td><a href="/Admin/Destination/UpdateDestination/@item.DestinationID" class="btn btn-outline-success">Güncelle</a></td>
                        <td><a href="" class="btn btn-outline-primary">Detaylar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <!-- DataTables -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            var table = $('#destinationsTable').DataTable({
                "language": { "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json" },
                "pageLength": 10,
                "ordering": true,
                "lengthChange": false,
                "info": false
            });

            // Silme işlemi SweetAlert ile
            $('#destinationsTable').on('click', '.btn-delete', function () {
                var row = $(this).closest('tr');
                var id = row.data('id');

                Swal.fire({
                    title: 'Emin misiniz?',
                    text: "Bu yorum kalıcı olarak silinecek!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Evet, sil!',
                    cancelButtonText: 'İptal',
                    backdrop:false
                }).then((result) => {
                    if (result.isConfirmed) {
                                $.ajax({
            url: '/Admin/Destination/DeleteDestination',
            type: 'POST',
            data: { id: id },
            success: function (response) {
                if (response.success) {
                    table.row(row).remove().draw();
                    Swal.fire({
                        title: 'Silindi!',
                        text: response.message,
                        icon: 'success',
                        backdrop: false
                    });
                } else {
                    Swal.fire({
                        title: 'Hata!',
                        text: response.message,
                        icon: 'error',
                        backdrop: false
                    });
                }
            },
            error: function () {
                Swal.fire({
                    title: 'Hata!',
                    text: 'Bir hata oluştu. Lütfen tekrar deneyin.',
                    icon: 'error',
                    backdrop: false
                });
            }
        });

                    }
                });
            });
        });
    </script>
}
