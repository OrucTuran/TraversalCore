@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Kullanıcı Listesi</h3>
    <a href="/Login/SignUp/" class="btn btn-primary">
        + Yeni Kullanıcı Ekle
    </a>
</div>

<div class="card shadow-sm rounded-3">
    <div class="card-body">
        <table id="usersTable" class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Ad Soyad</th>
                    <th>Kullanıcı Adı</th>
                    <th>Email</th>
                    <th>Sil</th>
                    <th>Düzenle</th>
                    <th>Yorumlar</th>@*kullanicinin yaptigi yorumlar*@
                    <th>Tur Geçmişi</th>@*kullanicinin katıldıg destinasyonlar*@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr data-id="@item.Id">
                        @{
                            count = count + 1;
                        }
                        <td>@count</td>
                        <td>@item.Name @item.Surname</td>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td>
                            <a href="javascript:void(0)" class="btn btn-sm btn-outline-danger btn-delete">
                                <i class="bx bx-trash"></i> Sil
                            </a>
                        </td>
                        <td><a href="/Admin/User/EditUser/@item.Id" class="btn btn-outline-success">Düzenle</a></td>
                        <td><a href="/Admin/User/CommentUser/@item.Id" class="btn btn-outline-info">Yorumlar</a></td>
                        <td><a href="/Admin/User/ReservationUser/@item.Id" class="btn btn-outline-primary">Tur Geçmişi</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <!-- DataTables -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            var table = $('#usersTable').DataTable({
                "language": { "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json" },
                "pageLength": 10,
                "ordering": true,
                "lengthChange": false,
                "info": false
            });

            // Silme işlemi SweetAlert ile
            $('#usersTable').on('click', '.btn-delete', function () {
                var row = $(this).closest('tr');
                var id = row.data('id');

                Swal.fire({
                    title: 'Emin misiniz?',
                    text: "Bu kullanıcı kalıcı olarak silinecek!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Evet, sil!',
                    cancelButtonText: 'İptal',
                    backdrop:false
                }).then((result) => {
                    if (result.isConfirmed) {
                                $.ajax({
            url: '/Admin/User/DeleteUser',
            type: 'POST',
            data: { id: id },
            success: function (response) {
                if (response.success) {
                    table.row(row).remove().draw();
                    Swal.fire({
                        title: 'Silindi!',
                        text: response.message,
                        icon: 'success',
                        backdrop: false
                    });
                } else {
                    Swal.fire({
                        title: 'Hata!',
                        text: response.message,
                        icon: 'error',
                        backdrop: false
                    });
                }
            },
            error: function () {
                Swal.fire({
                    title: 'Hata!',
                    text: 'Bir hata oluştu. Lütfen tekrar deneyin. Devam etmesi halinde teknik ekibe geri bildirimde bulunun.',
                    icon: 'error',
                    backdrop: false
                });
            }
        });

                    }
                });
            });
        });
    </script>
}
