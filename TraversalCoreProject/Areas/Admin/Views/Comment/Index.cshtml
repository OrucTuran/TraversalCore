@model List<Comment>
@{
    ViewData["Title"] = "Yorum Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="mb-3">Yorum Listesi</h3>

<div class="card shadow-sm rounded-3">
    <div class="card-body">
        <table id="commentsTable" class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Kullanıcı</th>
                    <th>Rota</th>
                    <th>Tarih</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr data-id="@item.CommentID">
                        <td>@item.CommentID</td>
                        <td>@item.CommentUser</td>
                        <td>@item.Destination?.City</td>
                        <td>@item.CommentDate.ToString("dd.MM.yyyy")</td>
                        <td>
                            <a href="javascript:void(0)" class="btn btn-sm btn-outline-danger btn-delete">
                                <i class="bx bx-trash"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <!-- DataTables -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            var table = $('#commentsTable').DataTable({
                "language": { "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json" },
                "pageLength": 10,
                "ordering": true,
                "lengthChange": false,
                "info": false
            });

            // Silme işlemi SweetAlert ile
            $('#commentsTable').on('click', '.btn-delete', function () {
                var row = $(this).closest('tr');
                var id = row.data('id');

                Swal.fire({
                    title: 'Emin misiniz?',
                    text: "Bu yorum kalıcı olarak silinecek!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Evet, sil!',
                    cancelButtonText: 'İptal',
                    backdrop:false
                }).then((result) => {
                    if (result.isConfirmed) {
                                $.ajax({
            url: '/Admin/Comment/DeleteComment',
            type: 'POST',
            data: { id: id },
            success: function (response) {
                if (response.success) {
                    table.row(row).remove().draw();
                    Swal.fire({
                        title: 'Silindi!',
                        text: response.message,
                        icon: 'success',
                        backdrop: false
                    });
                } else {
                    Swal.fire({
                        title: 'Hata!',
                        text: response.message,
                        icon: 'error',
                        backdrop: false
                    });
                }
            },
            error: function () {
                Swal.fire({
                    title: 'Hata!',
                    text: 'Bir hata oluştu. Lütfen tekrar deneyin.',
                    icon: 'error',
                    backdrop: false
                });
            }
        });

                    }
                });
            });
        });
    </script>
}
