@model TraversalCoreProject.Models.UserRegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <title>Kayıt Ol | TraversalCoreProject</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all" />
</head>

<body>
    <section class="w3l-login-6">
        <div class="login-hny">
            <div class="form-content">
                <div class="form-right">
                    <div class="overlay">
                        <div class="grid-info-form">
                            <h5>Merhaba</h5>
                            <h3>HESAP OLUŞTUR</h3>
                            <p>
                                Sitemize kayıt olarak hizmetlerimizden yararlanmaya başlayabilirsiniz.
                                Lütfen aşağıdaki formu doldurun.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="form-left">
                    <div class="middle">
                        <h4>Bize Katılın</h4>
                        <p>Hesabınızı oluşturun, tamamen ücretsiz!</p>
                    </div>
                    <form method="post" class="signin-form">
                        <div class="form-grid">
                            <div class="form-input">
                                <label>Ad</label>
                                <input type="text" asp-for="Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-input">
                                <label>Soyad</label>
                                <input type="text" asp-for="Surname" />
                                <span asp-validation-for="Surname" class="text-danger"></span>
                            </div>
                            <div class="form-input">
                                <label>Kullanıcı Adı</label>
                                <input type="text" asp-for="Username" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="form-input">
                                <label>Telefon Numarası</label>
                                <input type="text" asp-for="PhoneNumber" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-input">
                                <label>Şifre</label>
                                <input type="password" asp-for="Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-input">
                                <label>Şifre Tekrar</label>
                                <input type="password" asp-for="ConfrimPassword" />
                                <span asp-validation-for="ConfrimPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Email alanı -->
                        <div class="form-input">
                            <label>E-posta</label>
                            <input type="email" asp-for="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <br />
                        <label class="container">
                            <a href="#">Kullanım Şartları</a> ve <a href="#">Gizlilik Politikası</a>nı kabul ediyorum
                            <input type="checkbox">
                            <span class="checkmark"></span>
                        </label>
                        <button type="submit" class="btn">Hesap Oluştur</button>
                    </form>

                    <div class="copy-right text-center">
                        <p>
                            © @DateTime.Now.Year Tüm hakları saklıdır | Tasarım:
                            <a href="http://w3layouts.com/" target="_blank">W3layouts</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <style>
        .form-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
        }

        .form-input {
            display: flex;
            flex-direction: column;
        }

            .form-input input {
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 4px;
            }
    </style>

</body>
</html>
