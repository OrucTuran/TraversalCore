@{
    ViewData["Title"] = "Excel Raporları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4 text-primary">
                <i class="bi bi-file-earmark-excel"></i> Excel Raporları
            </h2>
        </div>
    </div>

    <div class="row g-4">
        <!-- Statik Excel Raporu -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-success">
                        <i class="bi bi-file-earmark-spreadsheet"></i> Statik Excel Raporu
                    </h5>
                    <p class="card-text text-muted flex-grow-1">
                        Önceden belirlenmiş sabit verilerle oluşturulmuş örnek Excel raporunu indir.
                    </p>
                    <a href="/Excel/StaticExcelReport/" class="btn btn-outline-success mt-auto">
                        <i class="bi bi-download"></i> İndir
                    </a>
                </div>
            </div>
        </div>

        <!-- Dinamik Excel Raporu -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-info">
                        <i class="bi bi-diagram-3"></i> Tur Rotaları Excel Raporu
                    </h5>
                    <p class="card-text text-muted flex-grow-1">
                        Veritabanındaki destinasyonlara göre dinamik olarak oluşturulan raporu indir.
                    </p>
                    <a href="/Excel/DestinationExcelReport/" class="btn btn-outline-info mt-auto">
                        <i class="bi bi-download"></i> İndir
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
