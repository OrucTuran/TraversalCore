@using EntityLayer.Concrete
@model List<Destination>

@*bu kisim Destinations tarafindan cekilecek *@
<div class="best-rooms py-5">
    <div class="container py-md-5">
        <div class="ban-content-inf row">
            @{
                var firstItem = Model.FirstOrDefault();


                <div class="maghny-gd-1 col-lg-6">
                    <div class="maghny-grid">
                        <figure class="effect-lily border-radius  m-0">
                            <img class="img-fluid" src="@firstItem.Image" alt="" />
                            <figcaption>
                                <div>
                                    <h4>@firstItem.City</h4>
                                    <p>@firstItem.DayNight | @firstItem.Price₺ </p>
                                </div>
                            </figcaption>
                        </figure>
                    </div>
                </div>
            }


            <div class="maghny-gd-1 col-lg-6 mt-lg-0 mt-4">
                <div class="row">
                    @foreach (var item in Model.Skip(1))
                    {


                        <div class="maghny-gd-1 col-6">
                            <div class="maghny-grid">
                                <figure class="effect-lily border-radius">
                                    <img class="img-fluid" src="@item.Image" alt="" />
                                    <figcaption>
                                        <div>
                                            <h4>@item.City</h4>
                                            <p>@item.DayNight | @item.Price₺ </p>
                                        </div>
                                    </figcaption>
                                </figure>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>